  <h1>ðŸš’ Feuerwehr Einsatzleiter</h1>
  <p>Koordiniere die EinsÃ¤tze und entscheide, welche Einheiten geschickt werden!</p>
  
  <div id="einsatzContainer"></div>
  
  <h2>Einsatz-Log</h2>
  <div id="log"></div>
  
  <script>
    const einsaetze = [
      { id: 1, name: "Wohnungsbrand", einheiten: ["LÃ¶schfahrzeug", "Drehleiter", "Rettungswagen"] },
      { id: 2, name: "Verkehrsunfall", einheiten: ["Rettungswagen", "Notarzt", "HilfeleistungslÃ¶schfahrzeug"] },
      { id: 3, name: "Katze im Baum", einheiten: ["Drehleiter", "HilfeleistungslÃ¶schfahrzeug"] },
      { id: 4, name: "Keller unter Wasser", einheiten: ["HilfeleistungslÃ¶schfahrzeug", "Pumpenwagen"] }
    ];
    
    const einsatzContainer = document.getElementById("einsatzContainer");
    const log = document.getElementById("log");

    function logMessage(msg) {
      const entry = document.createElement("div");
      entry.textContent = msg;
      log.appendChild(entry);
      log.scrollTop = log.scrollHeight;
    }

    function renderEinsaetze() {
      einsatzContainer.innerHTML = "";
      einsaetze.forEach(e => {
        const div = document.createElement("div");
        div.className = "einsatz";
        div.innerHTML = `
          <h3>${e.name}</h3>
          <p>BenÃ¶tigte Einheiten: ${e.einheiten.join(", ")}</p>
          <button onclick="bearbeiteEinsatz(${e.id})">Einsatz Ã¼bernehmen</button>
        `;
        einsatzContainer.appendChild(div);
      });
    }

    function bearbeiteEinsatz(id) {
      const einsatz = einsaetze.find(e => e.id === id);
      logMessage(`âœ… Einsatz "${einsatz.name}" erfolgreich koordiniert!`);
    }

    renderEinsaetze();
  </script>
